<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Color Palette -->
    <Color x:Key="PrimaryBlue">#2196F3</Color>
    <Color x:Key="PrimaryDark">#1976D2</Color>
    <Color x:Key="AccentOrange">#FF9800</Color>
    <Color x:Key="AccentPink">#E91E63</Color>
    <Color x:Key="SuccessGreen">#4CAF50</Color>
    <Color x:Key="DangerRed">#F44336</Color>
    <Color x:Key="BackgroundLight">#F5F5F5</Color>
    <Color x:Key="BackgroundDark">#303030</Color>
    <Color x:Key="TextDark">#212121</Color>
    <Color x:Key="TextLight">#FFFFFF</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>
    <SolidColorBrush x:Key="AccentPinkBrush" Color="{StaticResource AccentPink}"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
    <SolidColorBrush x:Key="DangerRedBrush" Color="{StaticResource DangerRed}"/>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}"/>
    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDark}"/>
    <SolidColorBrush x:Key="TextLightBrush" Color="{StaticResource TextLight}"/>
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource PrimaryBlue}" Offset="0"/>
        <GradientStop Color="{StaticResource PrimaryDark}" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource AccentOrange}" Offset="0"/>
        <GradientStop Color="{StaticResource AccentPink}" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>