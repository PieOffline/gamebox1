<Window x:Class="GameBox.Games.PongGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBox.Games"
        mc:Ignorable="d"
        Title="Pong" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Closed="Window_Closed"
        Background="Black"
        Focusable="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Score Display -->
        <Border Grid.Row="0" Background="DarkBlue" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" x:Name="ScoreText" Text="Score: 0" 
                           FontSize="18" FontWeight="Bold" Foreground="White"/>
                
                <TextBlock Grid.Column="1" Text="Controls: W/S or ↑/↓ | ESC to Exit" 
                           FontSize="12" Foreground="LightGray"/>
            </Grid>
        </Border>

        <!-- Game Area -->
        <Canvas Grid.Row="1" x:Name="GameCanvas" Background="Black" 
                Width="800" Height="550" Focusable="True">
            <!-- Center line -->
            <Line X1="400" Y1="0" X2="400" Y2="550" Stroke="DarkGray" 
                  StrokeThickness="2" StrokeDashArray="10,10"/>
        </Canvas>
        
    </Grid>
</Window>