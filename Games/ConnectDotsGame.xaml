<Window x:Class="GameBox.Games.ConnectDotsGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBox.Games"
        mc:Ignorable="d"
        Title="Connect the Dots" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundLightBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="ðŸ”— Connect the Dots" FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource TextLightBrush}"/>
                    <TextBlock x:Name="StatusText" Text="Click the dots in numerical order!" 
                               FontSize="14" Foreground="{StaticResource TextLightBrush}" Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="New Puzzle" Style="{StaticResource MenuButtonStyle}" 
                            Click="NewPuzzle_Click" Margin="5"/>
                    <Button Content="Back to Menu" Style="{StaticResource DangerButtonStyle}" 
                            Click="BackToMenu_Click" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Game Area -->
        <Border Grid.Row="1" Background="White" Margin="10" 
                BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="2">
            <Canvas x:Name="GameCanvas" Background="LightCyan" 
                    Width="870" Height="600"/>
        </Border>

        <!-- Instructions -->
        <Border Grid.Row="2" Background="{StaticResource BackgroundDarkBrush}" Padding="10">
            <TextBlock Text="ðŸŽ¯ Click the numbered dots in order from 1 to complete the picture! Each puzzle is randomly generated." 
                       FontSize="12" Foreground="{StaticResource TextLightBrush}" 
                       HorizontalAlignment="Center"/>
        </Border>
        
    </Grid>
</Window>