<Window x:Class="GameBox.Games.AsteroidsGame" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asteroids Game" Height="700" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="Black"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Focusable="True"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- HUD -->
        <Border Grid.Row="0" Background="{StaticResource BackgroundDarkBrush}" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŒŒ ASTEROIDS" FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="16" 
                               Foreground="White" Margin="20,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="LivesText" Text="Lives: 3" FontSize="16" 
                               Foreground="{StaticResource AccentOrangeBrush}" Margin="10,0"/>
                    <TextBlock x:Name="LevelText" Text="Level: 1" FontSize="16" 
                               Foreground="{StaticResource SuccessGreenBrush}" Margin="10,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Pause" x:Name="PauseButton" Style="{StaticResource WarningButtonStyle}" 
                            Click="Pause_Click" Margin="5,0"/>
                    <Button Content="New Game" Style="{StaticResource SuccessButtonStyle}" 
                            Click="NewGame_Click" Margin="5,0"/>
                    <Button Content="Back to Menu" Style="{StaticResource SecondaryButtonStyle}" 
                            Click="BackToMenu_Click" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Game Canvas -->
        <Canvas x:Name="GameCanvas" Grid.Row="1" Background="Black" ClipToBounds="True"/>
        
        <!-- Game Status Overlay -->
        <TextBlock x:Name="StatusText" Grid.Row="1" 
                   Text="Use WASD to move, Space to shoot, Q/E to rotate!" 
                   FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" Foreground="White" Margin="20"
                   Background="#80000000" Padding="10"/>
    </Grid>
</Window>
