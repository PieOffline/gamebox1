<Window x:Class="GameBox.Games.SnakeGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBox.Games"
        mc:Ignorable="d"
        Title="Snake Game" Height="750" Width="800"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Closed="Window_Closed"
        Background="{StaticResource BackgroundLightBrush}"
        Focusable="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="🐍 Snake Game" FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource TextLightBrush}"/>
                    <TextBlock x:Name="ScoreText" Text="Score: 0 | Length: 3" 
                               FontSize="14" Foreground="{StaticResource TextLightBrush}" Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="New Game" Style="{StaticResource MenuButtonStyle}" 
                            Click="NewGame_Click" Margin="5"/>
                    <Button Content="Back to Menu" Style="{StaticResource DangerButtonStyle}" 
                            Click="BackToMenu_Click" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Game Area -->
        <Border Grid.Row="1" Background="Black" Margin="10" 
                BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="3">
            <Viewbox Stretch="Uniform">
                <Canvas x:Name="GameCanvas" Background="#001100" 
                        Width="600" Height="600"/>
            </Viewbox>
        </Border>

        <!-- Status -->
        <Border Grid.Row="2" Background="{StaticResource AccentGradient}" Padding="10">
            <TextBlock x:Name="StatusText" 
                       Text="Use arrow keys or WASD to control the snake" 
                       FontSize="14" FontWeight="SemiBold"
                       Foreground="{StaticResource TextLightBrush}" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Instructions -->
        <Border Grid.Row="3" Background="{StaticResource BackgroundDarkBrush}" Padding="10">
            <TextBlock FontSize="12" Foreground="{StaticResource TextLightBrush}" 
                       HorizontalAlignment="Center">
                <Run Text="🎮 Controls: "/>
                <Run Text="Arrow Keys or WASD to move | "/>
                <Run Text="SPACE to pause/resume | "/>
                <Run Text="ESC to exit | "/>
                <Run Text="Eat red food to grow and score points!"/>
            </TextBlock>
        </Border>
        
    </Grid>
</Window>
