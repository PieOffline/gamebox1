<Window x:Class="GameBox.Games.Game2048" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2048 Game" Height="650" Width="500" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundLightBrush}"
        KeyDown="Window_KeyDown"
        Focusable="True"
        Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”¢ 2048" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Combine tiles to reach 2048!" FontSize="12" Foreground="White" Opacity="0.8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="20,0,0,0">
                    <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="16" FontWeight="Bold" 
                               Foreground="White" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="BestScoreText" Text="Best: 0" FontSize="12" 
                               Foreground="{StaticResource AccentOrangeBrush}" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Game Board -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundDarkBrush}" 
                BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="3" 
                Margin="20" CornerRadius="10">
            <Grid x:Name="GameGrid" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Border>
        
        <!-- Controls and Status -->
        <StackPanel Grid.Row="2" Margin="20">
            <TextBlock x:Name="StatusText" Text="Use arrow keys or WASD to move tiles!" 
                       FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" 
                       Foreground="{StaticResource TextDarkBrush}" Margin="0,0,0,10" TextWrapping="Wrap"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="New Game" Style="{StaticResource SuccessButtonStyle}" 
                        Click="NewGame_Click" Margin="5"/>
                <Button Grid.Column="1" Content="Undo Move" Style="{StaticResource WarningButtonStyle}" 
                        Click="UndoMove_Click" Margin="5" x:Name="UndoButton"/>
                <Button Grid.Column="2" Content="Back to Menu" Style="{StaticResource SecondaryButtonStyle}" 
                        Click="BackToMenu_Click" Margin="5"/>
            </Grid>
            
            <TextBlock Text="Controls: Use arrow keys or WASD to slide tiles" 
                       FontSize="11" HorizontalAlignment="Center" 
                       Foreground="{StaticResource TextDarkBrush}" Opacity="0.7" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
