<Window x:Class="GameBox.Games.BreakoutGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBox.Games"
        mc:Ignorable="d"
        Title="Breakout" Height="750" Width="700"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Closed="Window_Closed"
        Background="{StaticResource BackgroundLightBrush}"
        Focusable="True">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="🧱 Breakout" FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource TextLightBrush}"/>
                    <TextBlock x:Name="StatusText" Text="Use A/D or ←/→ to move paddle" 
                               FontSize="14" Foreground="{StaticResource TextLightBrush}" Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                    <StackPanel Orientation="Vertical" Margin="10,0">
                        <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="14" FontWeight="Bold"
                                   Foreground="{StaticResource TextLightBrush}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LivesText" Text="Lives: 3" FontSize="12"
                                   Foreground="{StaticResource TextLightBrush}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="BricksText" Text="Bricks: 48" FontSize="12"
                                   Foreground="{StaticResource TextLightBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="New Game" Style="{StaticResource MenuButtonStyle}" 
                            Click="NewGame_Click" Margin="5"/>
                    <Button Content="Back to Menu" Style="{StaticResource DangerButtonStyle}" 
                            Click="BackToMenu_Click" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Game Area -->
        <Border Grid.Row="1" Background="Black" Margin="10" 
                BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="3">
            <Canvas x:Name="GameCanvas" Background="#001122" 
                    Width="660" Height="600" Focusable="True"/>
        </Border>

        <!-- Game Info -->
        <Border Grid.Row="2" Background="{StaticResource AccentGradient}" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="🎯 " FontSize="16" Foreground="{StaticResource TextLightBrush}"/>
                <TextBlock Text="Break all the bricks! Top rows are worth more points!" 
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource TextLightBrush}"/>
            </StackPanel>
        </Border>

        <!-- Instructions -->
        <Border Grid.Row="3" Background="{StaticResource BackgroundDarkBrush}" Padding="10">
            <TextBlock FontSize="12" Foreground="{StaticResource TextLightBrush}" 
                       HorizontalAlignment="Center">
                <Run Text="🎮 Controls: "/>
                <Run Text="A/D or ←/→ to move paddle | "/>
                <Run Text="SPACE to restart ball | "/>
                <Run Text="ESC to exit | "/>
                <Run Text="Don't let the ball fall!"/>
            </TextBlock>
        </Border>
        
    </Grid>
</Window>
