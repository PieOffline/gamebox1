<Window x:Class="GameBox.MultiplayerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameBox"
        mc:Ignorable="d"
        Title="Connect to Opponent" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundLightBrush}"
        ResizeMode="NoResize">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Game Title -->
        <TextBlock Grid.Row="0" x:Name="GameNameText" FontSize="24" FontWeight="Bold" 
                   Foreground="{StaticResource PrimaryBlueBrush}" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Instructions -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="14" 
                   Foreground="{StaticResource TextDarkBrush}" Margin="0,0,0,20">
            <Run Text="To play with someone on your local network, enter their fruit code below. "/>
            <Run Text="Ask them to check their code on the main screen!" FontWeight="SemiBold"/>
        </TextBlock>

        <!-- Input Section -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="Opponent's Fruit Code:" FontSize="14" FontWeight="SemiBold"
                       Foreground="{StaticResource TextDarkBrush}" Margin="0,0,0,10"/>
            
            <TextBox x:Name="OpponentCodeTextBox" FontSize="16" Padding="10" 
                     BorderBrush="{StaticResource PrimaryBlueBrush}" BorderThickness="2"
                     TextChanged="OpponentCodeTextBox_TextChanged"
                     MaxLength="20"/>
        </StackPanel>

        <!-- Examples -->
        <TextBlock Grid.Row="3" FontSize="12" Foreground="{StaticResource TextDarkBrush}" 
                   Opacity="0.7" Margin="0,0,0,20">
            <Run Text="Examples: "/>
            <Run Text="Apple, Blackberry, Carrot, Date, Egg..." FontStyle="Italic"/>
        </TextBlock>

        <!-- Status -->
        <TextBlock Grid.Row="4" x:Name="StatusText" FontSize="12" 
                   Foreground="{StaticResource AccentOrangeBrush}" FontWeight="SemiBold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Spacer -->
        <Border Grid.Row="5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Style="{StaticResource DangerButtonStyle}" 
                    Click="CancelButton_Click" MinWidth="80" Margin="0,0,10,0"/>
            <Button x:Name="ConnectButton" Content="Connect &amp; Play" 
                    Style="{StaticResource MenuButtonStyle}" 
                    Click="ConnectButton_Click" MinWidth="120"/>
        </StackPanel>

    </Grid>
</Window>